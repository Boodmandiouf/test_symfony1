{% extends 'base.html.twig' %}

{% block body %}
    <h1>Myentity list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for myentity in myentities %}
            <tr>
                <td><a href="{{ path('myentity_show', { 'id': myentity.id }) }}">{{ myentity.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('myentity_show', { 'id': myentity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('myentity_edit', { 'id': myentity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('myentity_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
